model Post {
  id        String      @default(uuid()) @id
  content   String?
  user    User    @relation(fields: [userId], references: [id])
  userId  String
  webtoon   Webtoon  @relation(fields: [webtoonId], references: [id])
  webtoonId String
  comments Comment[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
