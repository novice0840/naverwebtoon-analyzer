model Webtoon {
  id        String    @id   @default(uuid())
  title     String
  writer    String
  illustrator String
  genre String
  platform  Platform  @relation(fields: [platformId], references: [id])
  platformId String
  synopsis String?
  thumbnailURL String?
  reivews Review[]
  posts Post[]
  chats Chat[]
  bookmarks Bookmark[]
  likes Like[]
  dislikes Dislike[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?
}